<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                                android:id="@+id/fragment_tankering_input">
    <TextView
            android:text="@string/input_starting_fuel_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="5"
            android:id="@+id/etInputFuelLevel" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView16" android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/textView16" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/textView16" app:layout_constraintHorizontal_bias="0.518"/>
    <Button
            android:text="@string/find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnExecute"
            android:layout_marginLeft="0dp" app:layout_constraintLeft_toLeftOf="@+id/etInputFuelLevel"
            android:layout_marginRight="0dp" app:layout_constraintRight_toRightOf="@+id/etInputFuelLevel"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/etInputFuelLevel"/>

</android.support.constraint.ConstraintLayout>